{
  "name": "distributed-database-explorer",
  "version": "0.0.0-development",
  "description": "Find entities and follow relations in a distributed database.",
  "main": "build/distributed-database-explorer.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha test/distributed-database-explorer.test.js -w",
    "test:single": "mocha test/distributed-database-explorer.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcocastignoli/distributed-database-explorer.git"
  },
  "keywords": [
    "distributed",
    "database",
    "explorer"
  ],
  "author": "Marco Castignoli <marco@castignoli.it> (https://castignoli.it/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcocastignoli/distributed-database-explorer/issues"
  },
  "homepage": "https://github.com/marcocastignoli/distributed-database-explorer#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.2",
    "i": "^0.3.6",
    "mocha": "^4.0.1",
    "semantic-release": "^8.2.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:single"
    }
  }
}
